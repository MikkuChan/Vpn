#!/bin/bash
# â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â€»â†â€»â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”
# ð“ˆƒ System Request âž  Debian 9+/Ubuntu 18.04+/20+
# ð“ˆƒ Developer âž  MikkuChan
# ð“ˆƒ Email      âž  fadztechs2@gmail.com
# ð“ˆƒ Telegram   âž  https://t.me/fadzdigital
# â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â€»â†â€»â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”

clear

# Konfigurasi
CHATID=$(grep -E "^#bot# " "/etc/bot/.bot.db" | cut -d ' ' -f 3)
KEY=$(grep -E "^#bot# " "/etc/bot/.bot.db" | cut -d ' ' -f 2)
export TIME="10"
export URL="https://api.telegram.org/bot$KEY/sendMessage"

# Warna ANSI
CYAN='\033[1;96m'
GREEN='\033[1;92m'
YELLOW='\033[1;93m'
RED='\033[1;91m'
NC='\033[0m' # Reset warna

# Informasi VPS
IP=$(curl -sS ipv4.icanhazip.com)
domain=$(cat /etc/xray/domain)
date=$(date +"%Y-%m-%d")

# Cek atau minta email untuk backup
email=$(cat /root/email 2>/dev/null)
if [[ -z "$email" ]]; then
    clear
    echo -e "${CYAN}Masukkan Email Untuk Menerima Backup${NC}"
    echo -e "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â€»â†â€»â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    read -rp "ðŸ“§ Input Email: " -e email
    echo -e "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â€»â†â€»â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    echo "$email" > /root/email
fi

clear
echo -e "${YELLOW}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â€»â†â€»â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo -e "ðŸ”¹ ${CYAN}MEMULAI PROSES BACKUP...${NC}"
echo -e "${YELLOW}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â€»â†â€»â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
sleep 1

# Fungsi progress bar
step=1
progress() {
    bar="â– â–¡â–¡â–¡â–¡â–¡â–¡â–¡â–¡â–¡"
    case $step in
        1) bar="â– â–¡â–¡â–¡â–¡â–¡â–¡â–¡â–¡â–¡" ;;
        2) bar="â– â– â– â– â–¡â–¡â–¡â–¡â–¡â–¡" ;;
        3) bar="â– â– â– â– â– â– â– â– â–¡â–¡" ;;
        4) bar="â– â– â– â– â– â– â– â– â– â– " ;;
    esac
    echo -ne "\rðŸ“‚ ${GREEN}$1${NC}   [$bar] $2%"
    step=$((step+1))
    sleep 2
}

# Persiapan folder backup
rm -rf /root/backup
mkdir /root/backup

# Animasi loading dengan warna
progress "Menyalin file sistem" 10
cp /etc/passwd /root/backup/
cp /etc/group /root/backup/
cp /etc/shadow /root/backup/
cp /etc/gshadow /root/backup/

progress "Menyalin file konfigurasi" 40
cp -r /etc/xray /root/backup/xray
cp -r /etc/kyt /root/backup/kyt
cp -r /etc/vmess /root/backup/vmess
cp -r /etc/vless /root/backup/vless
cp -r /etc/trojan /root/backup/trojan
cp -r /etc/shadowshocks /root/backup/shadowshocks

progress "Kompresi file backup" 80
cd /root
zip -r "$IP-$date.zip" backup > /dev/null 2>&1

progress "Mengunggah ke Google Drive" 100
rclone copy "/root/$IP-$date.zip" dr:backup/
url=$(rclone link dr:backup/$IP-$date.zip)
id=$(echo "$url" | grep -o 'id=[^&]*' | cut -d '=' -f2)
link="https://drive.google.com/u/4/uc?id=${id}&export=download"

echo -e "\nâœ… ${GREEN}Backup berhasil!${NC}"
sleep 1

# Kirim email dengan detail backup
echo -e "
â”â”â”â”â”â”â”â”â”â”â”â”â”â”â€»â†â€»â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”
ðŸ”¹ BACKUP VPS BERHASIL ðŸ”¹
â”â”â”â”â”â”â”â”â”â”â”â”â”â”â€»â†â€»â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”
ðŸ“Œ IP VPS       : $IP
ðŸŒ DOMAIN       : $domain
ðŸ“… TANGGAL      : $date
â”â”â”â”â”â”â”â”â”â”â”â”â”â”â€»â†â€»â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”
ðŸ“‚ LINK BACKUP :  
$link
â”â”â”â”â”â”â”â”â”â”â”â”â”â”â€»â†â€»â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”
âœ… Backup selesai!  
ðŸ“Œ Simpan link ini dan gunakan untuk restore di VPS baru.
" | mail -s "Backup Data" "$email"

# Hapus file backup lokal
rm -rf /root/backup
rm -r "/root/$IP-$date.zip"


clear
echo -e "${YELLOW}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â€»â†â€»â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo -e "ðŸ”¹ ${CYAN}BACKUP VPS BERHASIL${NC} ðŸ”¹"
echo -e "${YELLOW}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â€»â†â€»â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo -e "ðŸ“Œ ${GREEN}IP VPS       : ${NC}$IP"
echo -e "ðŸŒ ${GREEN}DOMAIN       : ${NC}$domain"
echo -e "ðŸ“… ${GREEN}TANGGAL      : ${NC}$date"
echo -e "ðŸ“‚ ${GREEN}LINK BACKUP  : ${NC}$link"
echo -e "${YELLOW}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â€»â†â€»â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo -e "âœ… ${GREEN}Backup selesai! Simpan link ini untuk restore di VPS baru.${NC}"

# Kirim Notifikasi ke Telegram
TEXT="
â”â”â”â”â”â”â”â”â”â”â€» Â·â†Â· â€»â”â”â”â”â”â”â”â”â”â”
ð“ˆƒ BACKUP VPS BERHASIL ð“ˆƒ
â”â”â”â”â”â”â”â”â”â”â€» Â·â†Â· â€»â”â”â”â”â”â”â”â”â”â”
ðŸ“Œ IP VPS       : $IP
ðŸŒ DOMAIN       : $domain
ðŸ“… TANGGAL      : $date
â”â”â”â”â”â”â”â”â”â”â€» Â·â†Â· â€»â”â”â”â”â”â”â”â”â”â”
ðŸ“‚ LINK BACKUP :  
$link
â”â”â”â”â”â”â”â”â”â”â€» Â·â†Â· â€»â”â”â”â”â”â”â”â”â”â”
âœ… Backup selesai!  
ðŸ“Œ Simpan link ini dan gunakan untuk restore di VPS baru, Onii-Chan.
"
curl -s --max-time $TIME -d "chat_id=$CHATID&disable_web_page_preview=1&text=$TEXT&parse_mode=html" $URL >/dev/null

exit 0