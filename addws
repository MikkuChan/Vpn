# Fungsi untuk menampilkan animasi loading
loading() {
    bar="â– â–¡â–¡â–¡â–¡â–¡â–¡â–¡â–¡â–¡"
    step=1
    while [ $step -le 3 ]; do
        case $step in
            1) bar="â– â–¡â–¡â–¡â–¡â–¡â–¡â–¡â–¡â–¡" ;;
            2) bar="â– â– â– â– â–¡â–¡â–¡â–¡â–¡â–¡" ;;
