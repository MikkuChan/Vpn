    green "MENGIRIM NOTIFIKASI KE TELEGRAM"
    echo -e "$line"
    sleep 2
    
    CHATID="$CHATID"
    KEY="$KEY"
    TIME=30
    URL="$URL"
    TEXT="
<code>â”â”â”â”â”â”â”â”â”â”â€» Â·â†Â· â€»â”â”â”â”â”â”â”â”â”â”</code>
<b>Â» CHANGE DOMAIN SUCCESS </b>
<code>â”â”â”â”â”â”â”â”â”â”â€» Â·â†Â· â€»â”â”â”â”â”â”â”â”â”â”</code>
<b>IP VPS :</b> <code>$MYIP </code>
<b>DOMAIN :</b> <code>$pp</code>
<code>â”â”â”â”â”â”â”â”â”â”â€» Â·â†Â· â€»â”â”â”â”â”â”â”â”â”â”</code>
<code>Â» ğŸ¤– @fadzdigital</code>"

    curl -s --max-time $TIME -d "chat_id=$CHATID&disable_web_page_preview=1&text=$TEXT&parse_mode=html" $URL >/dev/null
    green "Notifikasi berhasil dikirim ke Telegram"
}

# Jalankan fungsi
pasang_domain
pasang_ssl
notif_addhost

echo ""
green "Back To Menu In 2 Sec ${NC}"
sleep 2
menu